<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/station_widget_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/text_padding_horizontal_lax"
    android:paddingRight="@dimen/text_padding_horizontal_lax">

    <TextView
        android:id="@+id/station_widget_entry_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/bg_divider"
        android:paddingLeft="@dimen/text_padding_horizontal"
        android:paddingRight="@dimen/text_padding_horizontal"
        android:textColor="@color/fg_significant_darkdefault"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/station_widget_entry_destination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/fg_significant_darkdefault" />

    <TextView
        android:id="@+id/station_widget_entry_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/bg_highlighted_darkdefault"
        android:paddingLeft="@dimen/text_padding_horizontal"
        android:paddingRight="@dimen/text_padding_horizontal"
        android:singleLine="true"
        android:text="!"
        android:textColor="@color/fg_significant_darkdefault"
        android:textStyle="bold"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/station_widget_entry_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/bg_position_darkdefault"
        android:paddingLeft="@dimen/text_padding_horizontal"
        android:paddingRight="@dimen/text_padding_horizontal"
        android:singleLine="true"
        android:textColor="@color/bg_level0_darkdefault"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/station_widget_entry_delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:singleLine="true"
        android:textColor="@color/fg_highlighted_darkdefault"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/station_widget_entry_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:singleLine="true"
        android:textColor="@color/fg_significant_darkdefault"
        android:textStyle="bold" />

</LinearLayout>
